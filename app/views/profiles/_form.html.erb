

<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %> 

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :number, required: false %>
    <%= f.input :picture,as: :file, required: false, accepts: "image/png, image/jpeg" %>
  </div>

  <div class="form-actions">
    <center><%= f.button :submit, class:"sell m-3 justify-content-center p-1" %><center>
  </div>
<% end %>  

  


